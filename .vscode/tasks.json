{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run clang-format on project",
            "type": "shell",
            "command": "find ./ -iname *.hpp -o -iname *.cpp | xargs clang-format --style=file -i",
            "options": {
                "cwd": "./",
                "shell": {
                    "executable": "/usr/bin/pwsh",
                    "args": [
                        "-NoProfile",
                        "-Command"
                    ]
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}